{
  "env": {
    "es2021": true,
    "mocha": true
  },
  "extends": ["standard","plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": "build"
}
